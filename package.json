{
  "name": "vscode-norma43",
  "displayName": "Norma 43 Formatter",
  "description": "A formatter and highlighter for Norma43 files",
  "author": {
    "name": "Daniel Seijo",
    "email": "daniel.seijo@embat.io",
    "url": "https://www.embat.io"
  },
  "preview": true,
  "version": "1.0.1",
  "publisher": "embat",
  "homepage": "https://github.com/embatio/vscode-norma43/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/embatio/vscode-norma43/issues",
    "email": "daniel.seijo@embat.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/embatio/vscode-norma43.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [
    "norma43",
    "formatter",
    "highlighter"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "norma43",
        "aliases": [
          "Norma 43",
          "norma43"
        ],
        "extensions": [
          ".n43",
          ".txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "norma43",
        "scopeName": "source.norma43",
        "path": "./syntaxes/norma43.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.21",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "currency-codes": "^2.2.0"
  }
}
