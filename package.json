{
  "name": "vscode-norma43",
  "displayName": "Norma 43 Formatter",
  "description": "A formatter and highlighter for Norma43 files",
  "author": {
    "name": "Daniel Seijo",
    "email": "daniel.seijo@embat.io",
    "url": "https://www.embat.io"
  },
  "preview": true,
  "version": "0.0.1",
  "publisher": "embat",
  "homepage": "https://github.com/embatio/vscode-norma43/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/embatio/vscode-norma43/issues",
    "email": "daniel.seijo@embat.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/embatio/vscode-norma43.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [
    "norma43",
    "formatter",
    "highlighter"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "norma43",
        "aliases": [
          "Norma 43",
          "norma43"
        ],
        "extensions": [
          ".n43",
          ".txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "norma43",
        "scopeName": "source.norma43",
        "path": "./syntaxes/norma43.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  }
}
